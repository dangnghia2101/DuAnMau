<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bogoc_dialog">


    <ImageButton
        android:id="@+id/imgBtn_fragAddAvatarSach"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_add_avatar" />

    <EditText
        android:id="@+id/edt_fragMaSachThemSach"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/custom_edt"
        android:ems="10"
        android:hint="Nhập mã sách"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/edt_fragTenSachThemSach"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Nhập tên sách"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddMaThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_fragMaSachThemSach" />

    <EditText
        android:id="@+id/edt_fragGiaThemSach"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập giá sách"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddTenThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_fragTenSachThemSach" />

    <EditText
        android:id="@+id/edt_fragSoLuongThemSach"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Nhập số lượng"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddTenThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_fragGiaThemSach" />

    <Button
        android:id="@+id/btn_fragAddSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_button"
        android:text="Thêm sách"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_fragSoLuongThemSach" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please click me!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_fragAddAvatarSach" />

    <ImageButton
        android:id="@+id/imgBtn_fragExitThemSach"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_exit" />

    <Spinner
        android:id="@+id/sp_fragLoaiSachThemSach"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/custom_edt"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/sp_fragLoaiSachThemSach"
        app:layout_constraintEnd_toEndOf="@+id/sp_fragLoaiSachThemSach"
        app:srcCompat="@drawable/icon_down" />
</androidx.constraintlayout.widget.ConstraintLayout>