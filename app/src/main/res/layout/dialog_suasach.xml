<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bogoc_dialog">

    <ImageButton
        android:id="@+id/imgBtn_dialogAvatarSuaSach"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="65dp"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_add_avatar" />

    <EditText
        android:id="@+id/edt_dialogTenSuaSach"
        android:background="@drawable/custom_edt"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Nhập tên"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_dialogAvatarSuaSach" />

    <EditText
        android:id="@+id/edt_dialogGiaThueSuaSach"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edt"
        android:ems="10"
        android:hint="Nhập giá thuê sách"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogNamSinhSuaTV"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogTenSuaSach" />

    <EditText
        android:id="@+id/edt_dialogSoLuongSuaSach"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edt"
        android:ems="10"
        android:hint="Nhập số lượng sách"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogNamSinhSuaTV"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogGiaThueSuaSach" />

    <Button
        android:id="@+id/btn_dialogGuiSuaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Cập nhật"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogSoLuongSuaSach" />

</androidx.constraintlayout.widget.ConstraintLayout>