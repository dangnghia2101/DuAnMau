<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/imgBtn_dialogAddAvatarThanhVien"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_add_avatar" />

    <EditText
        android:id="@+id/edt_dialogAddMaThanhVien"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Nhập mã thành viên"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_dialogAddAvatarThanhVien" />

    <EditText
        android:id="@+id/edt_dialogAddTenThanhVien"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Nhập họ tên"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddMaThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogAddMaThanhVien" />

    <EditText
        android:id="@+id/edt_dialogAddNamSinhThanhVien"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập năm sinh"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddTenThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogAddTenThanhVien" />

    <EditText
        android:id="@+id/edt_dialogAddSDTThanhVien"
        android:paddingLeft="20dp"
        android:background="@drawable/custom_edt"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nhập số điện thoại"
        app:layout_constraintStart_toStartOf="@+id/edt_dialogAddTenThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogAddNamSinhThanhVien" />

    <Button
        android:id="@+id/btn_dialogAddThanhVien"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Thêm thành viên"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_dialogAddSDTThanhVien" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please click me!"
        app:layout_constraintEnd_toEndOf="@+id/imgBtn_dialogAddAvatarThanhVien"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/imgBtn_dialogAddAvatarThanhVien"
        app:layout_constraintTop_toBottomOf="@+id/imgBtn_dialogAddAvatarThanhVien" />

    <ImageButton
        android:id="@+id/imgBtn_fragExitThemThanhVien"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_exit" />
</androidx.constraintlayout.widget.ConstraintLayout>